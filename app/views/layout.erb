  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>MoodJournal</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
  
    <div class="nav">
     <ul>
     <% if logged_in? %>
        <li><a href="/logout">Logout</a></li>
        <li><a href="/journal_entries">All Entries</a></li>
        <li><a href="/journal_entries/new">New Entry</a></li>
            <li><a href="/moods">All Moods</a></li>
      <% else %>
        <li><a href="/login">Login</a></li>
        <li><a href="/signup">Sign Up</a></li>
      <% end %>
      </ul>
    </div>

    <div class="wrapper">
      <% if flash[:message] %>
          <h3 style="color: blue;"><%= flash[:message] %></h3>
      <% end %>
      <% if flash[:errors] %>
          <h3 style="color: red;"><%= flash[:errors] %></h3>
      <% end %>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2019 <strong>J.O'Hara</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
