<h3>Editing the entry for: <%= @journal_entry.date %></h3>
<h3>Please select the date you'd like to write an entry for:</h3>

<form method="POST" action="/journal_entries/<%= @journal_entry.id %>">
<input type="hidden" name="_method" value="patch">

<input type="date" name="date" value="<%=@journal_entry.date %>">

<h3>My moods:</h3>
  <div class="row"> 
    <div class="column">
    <% Mood.all[0..2].each do |mood| %>
      <input type="checkbox" name="mood_ids[]" value="<%= mood.id%>" <%='checked' if @journal_entry.mood_ids.include?(mood.id) %>> <%= mood.mood_type%><br>
    <% end%>
      
    </div>
    <div class="column">
     <% Mood.all[3..5].each do |mood| %>
      <input type="checkbox" name="mood_ids[]" value="<%= mood.id%>" <%='checked' if @journal_entry.mood_ids.include?(mood.id) %>> <%= mood.mood_type%><br>
    <% end%>
   </div>
    <div class="column">
       <% Mood.all[6..8].each do |mood| %>
      <input type="checkbox" name="mood_ids[]" value="<%= mood.id%>" <%='checked' if @journal_entry.mood_ids.include?(mood.id) %>> <%= mood.mood_type%><br>
    <% end%>
  </div>
  </div>
  
  <br>
  <h3>Comments:</h3>
    <textarea name="content" value="content" rows="20" cols="90"><%= @journal_entry.content %></textarea>
  <br>
  <input type="submit" value="Save">
</form>
